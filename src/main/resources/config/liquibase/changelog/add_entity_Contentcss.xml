<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.9.xsd
                        http://www.liquibase.org/xml/ns/dbchangelog-ext http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd">

    <changeSet id="contentcss" author="ahmed">
        <createTable tableName="contentcss">
            <column name="id" type="bigint">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="cssname" type="varchar(255)">
                <constraints nullable="false" />
            </column>
            <column name="csspath" type="varchar(10000)">
                <constraints nullable="true" />
            </column>
        </createTable>

        <createTable tableName="contentpage_css">
            <column name="contentpage_id" type="bigint">
                <constraints nullable="false"/>
            </column>
            <column name="contentcss_id" type="bigint">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <addPrimaryKey columnNames="contentpage_id, contentcss_id" tableName="contentpage_css"/>

        <addForeignKeyConstraint baseColumnNames="contentpage_id"
                                 baseTableName="contentpage_css"
                                 constraintName="fk_contentpage_id"
                                 referencedColumnNames="id"
                                 referencedTableName="contentpage"/>

        <addForeignKeyConstraint baseColumnNames="contentcss_id"
                                 baseTableName="contentpage_css"
                                 constraintName="fk_contentcss_id"
                                 referencedColumnNames="id"
                                 referencedTableName="contentcss"/>

    </changeSet>

</databaseChangeLog>
